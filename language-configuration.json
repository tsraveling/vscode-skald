{
  "comments": {
    "lineComment": "--"
  },
  "brackets": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "{", "close": "}" },
    { "open": "[", "close": "]" },
    { "open": "\"", "close": "\"", "notIn": ["string"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["{", "}"],
    ["[", "]"],
    ["\"", "\""]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*(#[a-zA-Z_]|@testbed)",
      "end": "^\\s*(@end|(?=#[a-zA-Z_]))"
    }
  },
  "wordPattern": "[a-zA-Z_][a-zA-Z0-9_]*"
}
